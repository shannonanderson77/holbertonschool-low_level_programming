CC=gcc
SRC=main.c holberton.c
OBJ=$(SRC:%.c=%.o)
NAME=holberton
RM=rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(SRC) $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

%.c%.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: clean oclean all
